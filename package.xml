<?xml version="1.0"?>
<!DOCTYPE package SYSTEM "DTD/package.dtd">
<package name="com.burningpedia.cp.apache2">

	<packageInformation>
		<packageName>Web ControlPanel Apache2 Modul</packageName>
		<packageDescription>Erstellt/Editiert Apache2-Vhosts</packageDescription>
		<version>1.0.0</version>
		<plugin>com.burningpedia.cp</plugin>
		<date>2010-12-12</date>
	</packageInformation>

	<authorInformation>
		<author>Tobias Friebel</author>
		<authorURL>http://dev.hugin-hosting.de/</authorURL>
		<license>GPL</license>
	</authorInformation>

	<requiredpackages>
		<requiredpackage minversion="1.1.0">com.woltlab.wcf</requiredpackage>
		<requiredpackage>com.burningpedia.cp</requiredpackage>
		<requiredpackage file="requirements/com.burningpedia.backendhandler.tar">com.burningpedia.backendhandler</requiredpackage>
		<requiredpackage file="requirements/com.burningpedia.cp.vhostcontainer.tar">com.burningpedia.cp.vhostcontainer</requiredpackage>
		<requiredpackage file="requirements/com.burningpedia.backend.vhostcontainer.apache2.tar">com.burningpedia.backend.vhostcontainer.apache2</requiredpackage>	
	</requiredpackages>

	<instructions type="install">
		<languages languagecode="de">de.xml</languages>
		<languages languagecode="en">en.xml</languages>
		<options>options.xml</options>
		<files>files.tar</files>
	</instructions>
	
	<instructions type="update" fromversion="0.*">
		<languages languagecode="de">de.xml</languages>
		<languages languagecode="en">en.xml</languages>
		<options>options.xml</options>
		<files>files.tar</files>
	</instructions>
	
	<instructions type="update" fromversion="1.*">
		<languages languagecode="de">de.xml</languages>
		<languages languagecode="en">en.xml</languages>
		<options>options.xml</options>
		<files>files.tar</files>
	</instructions>

</package>
